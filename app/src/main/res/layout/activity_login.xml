<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cons_login">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trải nghiệm Social chat"
        android:textColor="@color/black"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="@id/cons_login"
        app:layout_constraintEnd_toEndOf="@+id/cons_login"
        app:layout_constraintHorizontal_bias="0.328"
        app:layout_constraintStart_toStartOf="@id/cons_login"
        app:layout_constraintTop_toTopOf="@id/cons_login"
        app:layout_constraintVertical_bias="0.261" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quên mật khẩu ?"
        android:textColor="@color/login"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@id/cons_login"
        app:layout_constraintEnd_toEndOf="@+id/cons_login"
        app:layout_constraintHorizontal_bias="0.836"
        app:layout_constraintStart_toStartOf="@id/cons_login"
        app:layout_constraintTop_toTopOf="@id/cons_login"
        app:layout_constraintVertical_bias="0.698" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng nhập"
        android:textColor="@color/login"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/cons_login"
        app:layout_constraintEnd_toEndOf="@+id/cons_login"
        app:layout_constraintHorizontal_bias="0.157"
        app:layout_constraintStart_toStartOf="@id/cons_login"
        app:layout_constraintTop_toTopOf="@id/cons_login"
        app:layout_constraintVertical_bias="0.339" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EMAIL"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="@id/cons_login"
        app:layout_constraintEnd_toEndOf="@+id/cons_login"
        app:layout_constraintHorizontal_bias="0.134"
        app:layout_constraintStart_toStartOf="@id/cons_login"
        app:layout_constraintTop_toTopOf="@id/cons_login"
        app:layout_constraintVertical_bias="0.414" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PASSWORD"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="@id/cons_login"
        app:layout_constraintEnd_toEndOf="@+id/cons_login"
        app:layout_constraintHorizontal_bias="0.154"
        app:layout_constraintStart_toStartOf="@id/cons_login"
        app:layout_constraintTop_toTopOf="@id/cons_login"
        app:layout_constraintVertical_bias="0.562" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_mail_login"
        app:layout_constraintBottom_toBottomOf="@id/cons_login"
        app:layout_constraintEnd_toEndOf="@+id/cons_login"
        app:layout_constraintHorizontal_bias="0.17"
        app:layout_constraintStart_toStartOf="@id/cons_login"
        app:layout_constraintTop_toTopOf="@id/cons_login"
        app:layout_constraintVertical_bias="0.067" />


    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_email"
        app:layout_constraintBottom_toBottomOf="@id/cons_login"
        app:layout_constraintEnd_toEndOf="@+id/cons_login"
        app:layout_constraintHorizontal_bias="0.874"
        app:layout_constraintStart_toStartOf="@id/cons_login"
        app:layout_constraintTop_toTopOf="@id/cons_login"
        app:layout_constraintVertical_bias="0.482" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_password"
        app:layout_constraintBottom_toBottomOf="@id/cons_login"
        app:layout_constraintEnd_toEndOf="@+id/cons_login"
        app:layout_constraintHorizontal_bias="0.877"
        app:layout_constraintStart_toStartOf="@id/cons_login"
        app:layout_constraintTop_toTopOf="@id/cons_login"
        app:layout_constraintVertical_bias="0.631" />

    <EditText
        android:id="@+id/edtEmailLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:ems="15"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toBottomOf="@id/cons_login"
        app:layout_constraintEnd_toEndOf="@+id/cons_login"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="@id/cons_login"
        app:layout_constraintTop_toTopOf="@id/cons_login"
        app:layout_constraintVertical_bias="0.486" />

    <EditText
        android:id="@+id/edtPassLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="15"
        android:inputType="numberPassword"
        app:layout_constraintBottom_toBottomOf="@id/cons_login"
        app:layout_constraintEnd_toEndOf="@+id/cons_login"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="@id/cons_login"
        app:layout_constraintTop_toTopOf="@id/cons_login"
        app:layout_constraintVertical_bias="0.639" />

    <ImageView
        android:id="@+id/login_btn"
        android:layout_width="252dp"
        android:layout_height="61dp"
        android:src="@drawable/custom_button_login"
        app:layout_constraintBottom_toBottomOf="@id/cons_login"
        app:layout_constraintEnd_toEndOf="@+id/cons_login"
        app:layout_constraintHorizontal_bias="0.469"
        app:layout_constraintStart_toStartOf="@id/cons_login"
        app:layout_constraintTop_toTopOf="@id/cons_login"
        app:layout_constraintVertical_bias="0.831" />

    <TextView
        android:layout_width="101dp"
        android:layout_height="32dp"
        android:text="Đăng nhập"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@id/cons_login"
        app:layout_constraintEnd_toEndOf="@+id/cons_login"
        app:layout_constraintStart_toStartOf="@id/cons_login"
        app:layout_constraintTop_toTopOf="@id/cons_login"
        app:layout_constraintVertical_bias="0.824"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chưa có tài khoản?"
        app:layout_constraintBottom_toBottomOf="@id/cons_login"
        app:layout_constraintEnd_toEndOf="@+id/cons_login"
        app:layout_constraintHorizontal_bias="0.345"
        app:layout_constraintStart_toStartOf="@id/cons_login"
        app:layout_constraintTop_toTopOf="@id/cons_login"
        app:layout_constraintVertical_bias="0.95" />

    <TextView
        android:id="@+id/goto_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng ký ngay"
        android:textColor="@color/login"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/cons_login"
        app:layout_constraintEnd_toEndOf="@+id/cons_login"
        app:layout_constraintHorizontal_bias="0.698"
        app:layout_constraintStart_toStartOf="@id/cons_login"
        app:layout_constraintTop_toTopOf="@id/cons_login"
        app:layout_constraintVertical_bias="0.95" />
</androidx.constraintlayout.widget.ConstraintLayout>